# Snakefile 2 : Construction des figures
# mis Ã  jour le 25.11

container_default = "docker://paulinecoute/deseq:latest"

rule all:
    input:
        "correlation/correlation.txt",
        "figures/volcanoplot.png"


rule run_correlation:
    output:
        "correlation/correlation.txt"
    container:
        container_default
    shell:
        r"""
        mkdir -p correlation
        Rscript Correlation.R
        """


rule run_figures:
    input:
        corr = "correlation/correlation.txt"
    output:
        "figures/volcanoplot.png"
    container:
        container_default
    shell:
        r"""
        mkdir -p figures
        Rscript Figures.R
        """
