rule all:
    input:
        "reports/correlation.txt",
        "figures/Volcano_translation.png"

rule run_correlation:
    output:
        "reports/correlation.txt"
    container:
        "docker://paulinecoute/deseq:latest"
    shell:
        r"""
        Rscript Correlation.R
        """

rule run_figures:
    input:
        corr = "reports/correlation.txt"
    output:
        "figures/Volcano_translation.png"
    container:
        "docker://paulinecoute/deseq:latest"
    shell:
        r"""
        Rscript Figures.R
        """
